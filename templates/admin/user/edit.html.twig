{% extends 'base.html.twig' %}

{%block body %}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="card text-center col-11 px-0">
      <div class="card-header">
        <h5>Modification d'un utilisateur</h5>
      </div>
      <div class="card-body row m">
        <div class="col-lg-12 col-12">
          {{form_start(users, {'attr': {'class': 'd-flex justify-content-between flex-wrap form-edit-user-info'}})}}
          {{form_row(users.firstName)}}
          {{form_row(users.lastName)}}
          {{form_row(users.birthdate)}}
          {{form_row(users.email)}}
          {{form_row(users.address)}}
          {{form_row(users.license)}}
          {{form_row(users.phoneNumber)}}
          {{form_row(users.roles)}}
          <button type="submit"
            class="btn btn-outline-warning mx-auto col-12 col-lg-3 offset-lg-5 ">Enregistrer</button>
          {{form_end(users)}}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}