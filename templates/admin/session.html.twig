{% extends 'base.html.twig' %}

{% block title %}Entraînement {{ session.id }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>{{session.title}} du
        {{session.date | format_datetime(locale='fr',pattern="dd MMMM YYYY") }}</h1>

    <form method="GET" action="{{ path('admin_session_email', {'id' : session.id}) }}"
        onsubmit="return confirm('Envoyer l\'email ? (L\'email sera envoyé à tout les inscrits)')" class="w-50">
        <div class="form-group">
            <label for="emailTitle">Titre : </label>
            <input type="text" class="form-control shadow" name="emailTitle">
        </div>
        <div class="form-group">
            <label for="emailBody">Message : </label>
            <textarea class="form-control shadow" name="emailBody" rows="3"></textarea>
        </div>
        <p class="text-danger"></p>
        <button class="btn btn-primary mb-5 shadow" id="buttonsend">
            Envoyer
        </button>
    </form>

    {% for pendingList in pendingLists %}

    <table class="table table-striped table-dark">
        <h1>Liste des {{names[loop.index0]}} ({{pendingList|length}} inscrits) :</h1>
        <thead>
            <tr>
                <th scope="col">n°</th>
                <th scope="col">Prénom</th>
                <th scope="col">Nom</th>
                <th scope="col">Rôle</th>
                <th scope="col">Date de naissance</th>
                <th scope="col">Téléphone</th>
                <th scope="col">Licence</th>
                <th scope="col">Adresse</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>

            <pre>
        </pre>
            {% for item in pendingList %}
            <tr>
                <td>{{loop.index}}</td>
                <td>{{ item.user.firstName }}</td>
                <td>{{ item.user.lastName }}</td>
                {% if item.user.roles.0 == "ROLE_MEMBER" %}
                <td>Membre</td>
                {% elseif item.user.roles.0 == "ROLE_NON_MEMBER" %}
                <td>Non membre</td>
                {% else %}
                <td>Admin</td>
                {% endif %}
                <td>{{ item.user.birthdate | date('d/m/y') }}</td>
                <td>{{ item.user.phoneNumber }}</td>
                <td>{{ item.user.license }}</td>
                <td>{{ item.user.address }}</td>
                <td>
                    <form method="post"
                        action="{{ path('admin_session_user_delete', {'pendinglist' : item.id, 'sessionId' : session.id}) }}"
                        onsubmit="return confirm('Êtes-vous vraiment sûr ?')">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </form>
                </td>
            </tr>
            {% endfor %}

        </tbody>
    </table>
    {% endfor %}
</div>
{% endblock %}