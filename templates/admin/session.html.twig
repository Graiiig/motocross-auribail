{% extends 'base.html.twig' %}

{% block title %}Liste utilisateurs dans une session{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Entraînement n°{{ session.id }} : {{session.title}} le
        {{session.date | format_datetime(locale='fr',pattern="EEEE dd MMMM YYYY") }}</h1>
    <table class="table table-striped table-dark">
        <h1>Liste des utilisateurs :</h1>
        <thead>
            <tr>
                <th scope="col">Prénom</th>
                <th scope="col">Nom</th>
                <th scope="col">Date de naissance</th>
                <th scope="col">Téléphone</th>
                <th scope="col">Licence</th>
                <th scope="col">Adresse</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.birthdate | date('d/m/y') }}</td>
                <td>{{ user.phoneNumber }}</td>
                <td>{{ user.license }}</td>
                <td>{{ user.address }}</td>
                <td>
                    <form method="post" action="{{ path('admin_session_user_delete', {'id': session.id, 'idUser' : user.id}) }}"
                        onsubmit="return confirm('Êtes-vous vraiment sûr ?')">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </form>
                </td>
            </tr>
            {% endfor %}

        </tbody>
    </table>
</div>

{% endblock %}